{
    "minecraft": {
        "controller": "xbox360",
        "id": 0,
        "debug": false,
        "mappings": {
            "right stick": {
                "action": "move mouse on move",
                "exp": 2.9,
                "x speed": 1200,
                "y speed": -1500,
                "x component": "x",
                "y component": "y"
            },
            "left stick": [
                { "threshold": ["y", 0.4, 1.5], "action": "w on hold"},
                { "threshold": ["y", -1.5, -0.4], "action": "s on hold" },
                { "threshold": ["x", -1.5, -0.4], "action": "a on hold" },
                { "threshold": ["x", 0.4, 1.5], "action": "d on hold" }
            ],
            
            "left trigger":
                { "action": "left click on toggle", "threshold": [0.5, 1]},
            "right trigger":
                { "action": "left click on hold", "threshold": [0.5, 1]},
            "right bumper": "right click on hold",
            
            "start": "VK_ESCAPE on hold",
            "left bumper": "VK_CONTROL on hold",
            "left stick click": "VK_SHIFT on hold",
            "right stick click": "middle click on hold",
            
            "left": "1 on press",
            "right":
                { "action": "scroll y on press", "amount": -1},
            "down": "h on hold",
            
            "a": "VK_SPACE on hold",
            "b": "q on press",
            "x":
                { "action": "scroll y on press", "amount": 1},
            "y":
                { "action": "scroll y on press", "amount": -1},
            
            "back": "abort on press"
        }
    }
}